@model List<WorkFlows>
@{
    ViewData["Title"] = "Index";
}

<body id="page-top">


    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Tables</h1>
        <p class="mb-4">
            DataTables is a third party plugin that is used to generate the demo table below.
            For more information about DataTables, please visit the <a target="_blank"
                                                                       href="https://datatables.net">official DataTables documentation</a>.
        </p>
        <a asp-controller="WorkFlow" asp-action="Create" class="btn btn-primary mb-4">Add</a>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th></th>
                                <th></th>


                            </tr>
                        </thead>
                        <tbody>
                                @foreach (var item in Model)
                                {
                            <tr>
                                 <td>@item.Id</td>
                                 <td>@item.Name</td>
                                <td><a class="btn btn-success" asp-controller="WorkFlow" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                                <td><a class="btn btn-danger" asp-controller="WorkFlow" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->



</body>


